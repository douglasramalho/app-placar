<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonAddPontoTimeA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Time A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddPontoTimeB"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812" />

    <Button
        android:id="@+id/buttonAddPontoTimeB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Time B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAddPontoTimeA"
        app:layout_constraintTop_toTopOf="@+id/buttonAddPontoTimeA" />

    <TextView
        android:id="@+id/textPontosTimeA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="76sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddPontoTimeA"
        app:layout_constraintEnd_toEndOf="@+id/buttonAddPontoTimeA"
        app:layout_constraintStart_toStartOf="@+id/buttonAddPontoTimeA"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPontosTimeB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textSize="76sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddPontoTimeB"
        app:layout_constraintEnd_toEndOf="@+id/buttonAddPontoTimeB"
        app:layout_constraintStart_toStartOf="@+id/buttonAddPontoTimeB"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>